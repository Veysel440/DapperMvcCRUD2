@model IEnumerable<DapperMvcCRUD2.Models.BolumModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddOrEdit", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BolumAd)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BolumAd)
            </td>
            <td>
                @Html.ActionLink("Edit", "AddOrEdit", new { id = item.BolumID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BolumID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<style>
    a {
        color: #007bff;
        text-decoration: none;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>


